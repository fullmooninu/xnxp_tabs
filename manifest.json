{
  "manifest_version": 2,
  "name": "Tab Info",
  "version": "1.0",
  "description": "Lists all open tabs and stores their info",
  "permissions": ["tabs","storage"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}